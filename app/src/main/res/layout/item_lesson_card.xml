<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/lessonNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пара №1"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/lessonNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название: Основы программирования"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/teacherTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Преподаватель: Иванов И.И."
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/cabinetTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Кабинет: 205"
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>