<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background">

    <TextView
        android:id="@+id/widget_group_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Расписание для группы: Загрузка..."
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="17sp"
        android:paddingBottom="6dp" />

    <ListView
        android:id="@+id/widget_schedule_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp" /> <TextView
    android:id="@+id/widget_empty_view"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center"
    android:text="Расписание не найдено или ошибка загрузки."
    android:textColor="#CCCCCC"
    android:textSize="14sp"
    android:visibility="gone"/> <TextView
    android:id="@+id/widget_last_updated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Обновлено: -"
    android:textColor="#CCCCCC"
    android:textSize="10sp"
    android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/widget_refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Обновить"
        android:textSize="11sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="12dp"
        android:backgroundTint="#FF4CAF50"
        android:textColor="@android:color/white"
        android:elevation="4dp" />

</LinearLayout>